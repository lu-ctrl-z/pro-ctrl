<div id="divSave" class="panel panel-default" data-cs-page="1" data-page-index="currentPage">
    <div class="panel-heading">
        <strong class="h-i">
            <%-__('customer.customerSaveInfo')%>
        </strong>
    </div>
    <div class="panel-body">
        <form id="frmSave" class="form-horizontal">
            <input type='hidden' name='_csrf' value='<%- _csrf %>'>
            <div class="form-group">
                <label class="col-sm-4 control-label">
                    <%=__('customer.phoneNumber')%>
                </label>
                <div class="col-sm-4">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="glyphicons glyphicons-earphone" aria-hidden="true"></i></span>
                      <input type="text" style="z-index:1" maxlength="20" name="phoneNumber" class="op-ux-input form-control validate[maxSize[20],custom[phone]]" id="phoneNumber">
                 </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">
                    <%=__('customer.fullName')%><%-__('common.mandatory')%>
                </label>
                <div class="col-sm-4">
                    <input type="text" maxlength="255" class="op-ux-input form-control validate[required,maxSize[255]]" name="fullName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">
                    <%=__('customer.address')%>
                </label>
                <div class="col-sm-4">
                    <textarea maxlength="255" class="op-ux-input form-control validate[maxSize[255]]" name="address"></textarea>
                </div>
            </div>
            <div class="btn-area">
                <button type="button" class="btn btn-danger" data-ng-click="currentPage=CS_PAGE.SEARCH"><%-__('button.back')%></button>
                <button type="submit" class="btn btn-info" onclick="pressSaveAndInvoice();"><%-__('button.saveAndInvoice')%></button>
            </div>
        </form>
    </div>
</div>