<div id="content-body" class="panel panel-default"
    ng-app="homeApp"
    ng-controller="HomeController"
>
    <div class="panel-heading">
        <strong>
            <span class="glyphicons glyphicons-show-thumbnails"></span>
            <span>Thông tin khách hàng</span>
        </strong>
    </div>
    <div class="panel-body">
        <cs-page-progress page-index="currentPage" page-size="2" show-number="true" class="cs-pageprogress--thinline-blue ng-isolate-scope"></cs-page-progress>
        <form id="frmCustomer" class="form-horizontal">
        <div class="cs-page__container clearfix" style="margin-top: 20px;" ng-cloak>
            <div cs-page="0" page-index="currentPage" class="page-content" style="width:100%">
                <div class="form-group">
                    <label class="col-sm-4 control-label">
                        <%=__('customer.phoneNumber')%>
                    </label>
                    <div class="col-sm-4">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicons glyphicons-earphone" aria-hidden="true"></i></span>
                          <input type="text" style="z-index:1" name="phoneNumber" class="op-ux-input form-control" id="phoneNumber">
                     </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">
                        <%=__('customer.fullName')%>
                    </label>
                    <div class="col-sm-4">
                        <input type="text" class="op-ux-input form-control" name="fullName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">
                        <%=__('customer.address')%>
                    </label>
                    <div class="col-sm-4">
                        <textarea class="op-ux-input form-control" name="address"></textarea>
                    </div>
                </div>
                <div class="btn-area">
                    <button type="button" class="btn btn-info" ng-click="movePage(-1)"><%-__('button.back')%></button>
                    <button type="button" class="btn btn-info" ng-click="nextInfoAddress()"><%-__('button.next')%></button>
                </div>
            </div>
            <div cs-page="1" page-index="currentPage" class="page-content validationEngineContainer" style="width:100%">
                <div class="btn-area">
                    <button type="button" class="btn btn-info" ng-click="movePage(-1)"><%-__('button.back')%></button>
                    <button type="button" class="btn btn-info" ng-click="nextInfoAddress()"><%-__('button.next')%></button>
                </div>
            </div>
        </div>
        </form>
    </div>
</div>
<script type="text/javascript">
var homeApp = angular.module('homeApp', ['ngAnimate', 'ngSanitize', 'csProgress' ]);
homeApp.controller('HomeController', function( $scope, $http, $filter) {
    //Khoi tao trang
    $scope.currentPage = 0;
});
$(document).ready( function() {
    if (!angular.element(document.getElementById('content-body')).scope()) {
        angular.bootstrap(document.getElementById("content-body"), [ 'homeApp' ]);
    }
});
</script>