<div class="adminMainScreen clearfix">
    <div class="mainMenu">
        <%include ../../element/_welcome%>
        <%include ../../element/_admin_menu%>
    </div>
    <div class="detailAction">
       <h2 class="sub-right"><i style="margin-right: 10px;" class="fa fa-user"></i>Add user</h2>
       <div class="search">
           <form action="/admin/user/edit" method="post" id="addIn" autocomplete="off">
           <input type="hidden" name="uid" value="<%=req.param('uid') || ''%>">
           <% include ../../element/_error %>
               <table class="data-form">
                    <tr>
                        <th>Tên đăng nhập: <span class="req">*</span></th>
                        <td><input autofocus="autofocus" type="text" name="user_name" value="<%=req.param('user_name') || res.locals.user.user_name%>"></td>
                    </tr>
                    <%/*tr>
                        <th>Mật khẩu: <span class="req">*</span></th>
                        <td><input type="password" name="password" value="" autocomplete="off"></td>
                    </tr>
                    <tr>
                        <th>Mật khẩu<br/>Xác nhận: <span class="req">*</span></th>
                        <td><input type="password" name="repassword" value="" autocomplete="off"></td>
                    </tr*/%>
                    <tr>
                        <th>Email: <span class="req">*</span></th>
                        <td><input type="email" name="email" value="<%=req.param('email') || res.locals.user.email%>"></td>
                    </tr>
                    <tr>
                        <th>Chọn phân loại: <span class="req">*</span></th>
                        <td><%for(var i in sails.config.common.memberType) {%>
                            <label class="uiLabelCheckbox">
                            <input 
                            <%if(req.param('member_type')) { 
                                if(i == req.param('member_type')) {%>checked='checked'<%}} 
                             else if(i == res.locals.user.member_type) {%>checked='checked'<%}%> name="member_type" type="radio" value="<%=i%>"><%=sails.config.common.memberType[i]%></label>
                            <%}%>
                    </tr>
                    <tr>
                        <th>Chọn quyền: <span class="req">*</span></th>
                        <td><%for(var i in sails.config.common.authType) {%>
                            <label class="uiLabelCheckbox">
                            <input 
                            <%if(req.param('auth_type')) { 
                            if(i == req.param('auth_type')) {%>checked='checked'<%}}
                            else if(i == res.locals.user.auth_type){%> checked='checked'<%}%> name="auth_type" type="radio" value="<%=i%>"><%=sails.config.common.authType[i]%></label>
                            <%}%></td>
                    </tr>
                    <tr>
                        <th></th>
                        <td><button type="submit">Edit</a></button>&nbsp;&nbsp;&nbsp;or&nbsp;&nbsp;&nbsp;<button onclick="javascript: return confirm('Are you sure ?')" name="delete" value="<%= _csrf %>" style="background-color: red; color: white;" type="submit">Delete</button></td>
                    </tr>
               </table>
               <input type='hidden' name='_csrf' value='<%= _csrf %>'>
           </form>
       </div>
    </div>
</div>